  section.lower
    .container.js-contact
      .row
        .col-sm-12.col-md-10.col-md-offset-1.col-lg-12.col-lg-offset-0
          h1.lower__title
            span 100% clientes
            span Indicam
          .col-sm-12.col-md-6.col-lg-6
