                    .pride-box__author__company
                      | cur.to
          .col-sm-12.col-md-5.col-md-offset-1.col-lg-5.col-lg-offset-1
            section
              .form-box
                form[action="/contact" method="post"]
                  input[type="text" name="message[spam]" value="" style="display: none"]
                  input[type="hidden" name="message[antispam]" value=""]
                  .form-box__divider
                    input[name="message[name]" placeholder="Nome Completo" required="true" type="text"]
                  .form-box__divider
                    input[name="message[mail]" placeholder="exemplo@email.com" required="true" type="text"]
                  .form-box__divider
                    input#mask-phone[name="message[phone]" placeholder="(DDD)XXXXX-XXXX" required="true" type="text"]
                  .form-box__divider
                    .select
                      select[name="message[budget]" placeholder="Orçamento Disponível" required="true"]
                        option[disabled="disabled" value="default"] Orçamento Disponível
                        option[value="7-10"] R$ 7 a 10 mil
                        option[value="10-15"] R$ 10 a 15 mil
                        option[value="more"] mais de 15 mil
                  .form-box__divider
                    textarea[name="message[body]" placeholder="Fale mais sobre o seu projeto..."]
                  .form-box__divider
                    button.btn.btn--line-yellow.btn--lg.btn--block[type="submit" value="Enviar"] Enviar mensagem
